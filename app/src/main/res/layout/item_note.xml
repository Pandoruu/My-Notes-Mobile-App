<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Làm sao để tôi lại lại được view như này: sử dụng GridLayout để load các item lên màn hình"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/radius_16dp"
        android:textColor="@color/dark_gray"
        app:layout_constraintBottom_toTopOf="@+id/title"
        android:layout_margin="8dp"
        android:padding="8dp"

        android:scrollHorizontally="false"
        android:requiresFadingEdge="vertical"
        android:fadingEdge="vertical"
        android:ellipsize="none"
        android:overScrollMode="never"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/date"
        android:gravity="center"
        android:text="Title"
        android:textSize="24sp"
        android:layout_margin="8dp"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:text="xx/xx/xx"
        android:textSize="20sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/alansans_light"
        android:layout_margin="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>